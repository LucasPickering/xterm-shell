{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": ["src/"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": false,
    "excludeDirectories": ["**/node_modules", "dist"]
  }
}
